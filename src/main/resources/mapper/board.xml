<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.transferdto.model.board.BoardRepository">
    <select id="findAll" resultType="shop.mtcoding.transferdto.model.board.Board">
        select * from board_tb
    </select>

    <select id="findById" resultType="shop.mtcoding.transferdto.model.board.Board">
        select * from board_tb where id = #{id}
    </select>

    <insert id="insert">
        <!-- insert into board_tb (boardname, password, email, created_at)
        values(#{boardname}, #{password}, #{email}, now()) -->
    </insert>

    <delete id="deleteById" >
        delete from board_tb where id = #{id}
    </delete>

    <update id="updateById" >
        <!-- update board_tb set boardname= #{boardname}, password= #{password}, email= #{email} where id = #{id} -->
    </update>

</mapper>